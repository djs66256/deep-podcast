# Deep Podcast System Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FILE=./logs/deep_podcast.log

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Choose your LLM provider: anthropic, openai (includes DashScope compatible mode)
LLM_PROVIDER=openai
LLM_MODEL=qwen-max
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=60

# API Keys (choose based on your provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# For DashScope (Aliyun) using OpenAI compatible mode
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_API_KEY=your_dashscope_api_key_here

# =============================================================================
# TTS CONFIGURATION (Qwen TTS Service)
# =============================================================================
TTS_PROVIDER=qwen
QWEN_TTS_API_KEY=your_qwen_tts_api_key_here
QWEN_TTS_BASE_URL=https://dashscope.aliyuncs.com/api/v1/services/aigc/text2speech/synthesis

# TTS Settings
TTS_AUDIO_FORMAT=mp3
TTS_SAMPLE_RATE=16000
TTS_SPEECH_RATE=1.0
TTS_PITCH=0
TTS_VOLUME=1.0

# Voice Models (JSON format)
TTS_VOICE_MODELS={"host": "xiaoyun", "guest": "xiaogang"}

# =============================================================================
# SEARCH AND CRAWLING CONFIGURATION
# =============================================================================
MAX_SEARCH_RESULTS=20
MAX_CRAWL_PAGES=50
SEARCH_TIMEOUT=30
CRAWL_TIMEOUT=15
CONTENT_MIN_LENGTH=500
CONCURRENT_REQUESTS=5

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
OUTPUT_BASE_DIR=./outputs
REPORT_FORMAT=markdown
AUDIO_FORMAT=mp3
AUDIO_QUALITY=high
FILE_NAMING={timestamp}_{topic_hash}
COMPRESSION=true
CLEANUP_TEMP=true

# =============================================================================
# PERFORMANCE AND SECURITY
# =============================================================================
MAX_CONCURRENT_TASKS=5
REQUEST_TIMEOUT=60
ALLOWED_HOSTS=localhost,127.0.0.1
SECRET_KEY=your_secret_key_here

# =============================================================================
# STORAGE AND CLEANUP
# =============================================================================
TEMP_DIR=/tmp/deep_podcast
CLEANUP_INTERVAL=3600

# =============================================================================
# TAVILY SEARCH (Optional - for additional search capabilities)
# =============================================================================
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Override any setting for development
# DEV_LLM_MODEL=gpt-3.5-turbo
# DEV_OUTPUT_BASE_DIR=./dev_outputs